<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <servlet>
        <display-name>LogoutServlet</display-name>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Add mapping for all servlets !!! -->
    <servlet>
        <display-name>AllTaskServlet</display-name>
        <servlet-name>AllTaskServlet</servlet-name>
        <servlet-class>servlet.AllTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AllTaskServlet</servlet-name>
        <url-pattern>/allTaskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>CreateTask</display-name>
        <servlet-name>CreateTask</servlet-name>
        <servlet-class>servlet.CreateTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateTask</servlet-name>
        <url-pattern>/createTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>DeleteTask</display-name>
        <servlet-name>DeleteTask</servlet-name>
        <servlet-class>servlet.DeleteTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteTask</servlet-name>
        <url-pattern>/deleteTask</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>TaskServlet</display-name>
        <servlet-name>TaskServlet</servlet-name>
        <servlet-class>servlet.GetTaskByIdServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TaskServlet</servlet-name>
        <url-pattern>/taskServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>updateTask</display-name>
        <servlet-name>updateTask</servlet-name>
        <servlet-class>servlet.UpdateTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>updateTask</servlet-name>
        <url-pattern>/updateTask</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>userDelete</display-name>
        <servlet-name>userDelete</servlet-name>
        <servlet-class>servlet.UserDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userDelete</servlet-name>
        <url-pattern>/userDelete</url-pattern>
    </servlet-mapping>

    <servlet>
        <display-name>CreateUser</display-name>
        <servlet-name>CreateUser</servlet-name>
        <servlet-class>servlet.CreateUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateUser</servlet-name>
        <url-pattern>/createUser</url-pattern>
    </servlet-mapping>
    <servlet>
        <display-name>IndexServlet</display-name>
        <servlet-name>IndexServlet</servlet-name>
        <servlet-class>servlet.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>

</web-app>